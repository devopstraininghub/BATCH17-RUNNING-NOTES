[root@linux opt]# cat sum.sh

#!/bin/bash

echo "ENTER THE 1ST NUMBER"

read num1

echo "ENTER THE 2nd NUMBER"

read num2

sum=$(( num1 + num2 ))

echo " The sum of 2 numbers : sum"

